<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="MovieDiscussionService" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2015-04.2.6">
  <WebRole name="MovieDiscussionService_WebRole" vmsize="Standard_D1_v2">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="Endpoint1" endpointName="Endpoint1" />
        </Bindings>
      </Site>
    </Sites>
    <ConfigurationSettings>
      <Setting name="DataConnectionString" />
    </ConfigurationSettings>
    <Endpoints>
      <InputEndpoint name="Endpoint1" protocol="http" port="80" />
    </Endpoints>
  </WebRole>
  <WorkerRole name="NotificationService" vmsize="Standard_D1_v2">
    <ConfigurationSettings>
      <Setting name="DataConnectionString" />
    </ConfigurationSettings>
  </WorkerRole>
  <WorkerRole name="WorkerRoleService" vmsize="Standard_D1_v2">
    <ConfigurationSettings />
  </WorkerRole>
	<WorkerRole name="HealthMonitoringService" vmsize="Standard_D1_v2">
		<Endpoints>
			<InputEndpoint name="HttpIn" protocol="http" port="50002" />
		</Endpoints>
		<ConfigurationSettings>
			<Setting name="DataConnectionString" />
		</ConfigurationSettings>
	</WorkerRole>
</ServiceDefinition>