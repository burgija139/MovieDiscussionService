@{
    ViewBag.Title = "Register";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Register - MovieDiscussion</title>
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            width: 100%;
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #1f2023, #252a31, #2c3e50);
            color: #f1f1f1;
            overflow: hidden;
        }

        .container {
            display: flex;
            height: 100vh;
            width: 100%;
            justify-content: space-around;
            align-items: center;
        }

        .left, .right {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
        }

        .register-box {
            background-color: rgba(0, 0, 0, 0.65);
            padding: 25px 35px;
            border-radius: 10px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.5);
            width: 350px;
            height: 630px;
            text-align: center;
        }

            .register-box h2 {
                margin-bottom: 15px;
                color: #f5c518;
            }

            .register-box input[type="text"],
            .register-box input[type="email"],
            .register-box input[type="password"],
            .register-box select,
            .register-box input[type="file"] {
                width: 85%;
                padding: 8px;
                margin: 5px auto 12px auto;
                border: 1px solid #888;
                border-radius: 4px;
                background-color: transparent;
                color: #eee;
                font-size: 14px;
                text-align: left;
                display: block;
                cursor: pointer;
            }

                .register-box input::placeholder,
                .register-box select option[disabled] {
                    color: #999;
                }

                .register-box select option {
                    background-color: #2c3e50;
                    color: #eee;
                }

                .register-box input[type="file"]::-webkit-file-upload-button {
                    background-color: #f5c518;
                    border: none;
                    padding: 6px 10px;
                    border-radius: 4px;
                    font-weight: bold;
                    color: #000;
                    cursor: pointer;
                }

                    .register-box input[type="file"]::-webkit-file-upload-button:hover {
                        background-color: #e4b912;
                    }

            .register-box button {
                width: 85%;
                padding: 10px;
                background-color: #f5c518;
                color: #000;
                font-weight: bold;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                display: block;
                margin: 10px auto 5px;
            }

            .register-box small {
                color: #ccc;
                margin-top: 10px;
                display: block;
            }

        .error {
            color: #ff6666;
            margin-bottom: 10px;
        }

        a {
            color: #f5c518;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        .welcome {
            text-align: center;
            max-width: 500px;
        }

            .welcome h1 {
                font-size: 60px;
                margin-bottom: 10px;
                color: #f5c518;
                margin-top: -40px;
            }

            .welcome p {
                font-size: 20px;
                color: #ccc;
                margin-bottom: 20px;
            }

            .welcome img {
                width: 250px;
                height: auto;
                filter: drop-shadow(0 0 10px #f5c518aa);
                margin-top: 20px;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="left">
            <div class="register-box">
                <h2>Create Account</h2>

                @if (ViewBag.Error != null)
                {
                    <div class="error">@ViewBag.Error</div>
                }

                <form method="post" action="/Account/Register" enctype="multipart/form-data">
                    <input type="text" name="name" placeholder="Name" required />
                    <input type="text" name="lastname" placeholder="Last Name" required />
                    <input type="text" name="country" placeholder="Country" required />
                    <input type="text" name="city" placeholder="City" required />
                    <input type="text" name="address" placeholder="Address" required />
                    <input type="email" name="email" placeholder="Email" required />
                    <input type="password" name="password" placeholder="Password" required />
                    <input type="password" name="confirmPassword" placeholder="Confirm Password" required />
                    <select name="gender" required>
                        <option value="" disabled selected>Select Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                    <input type="file" name="profileImage" accept="image/*" required />
                    <button type="submit">Register</button>
                </form>

                <small>Already have an account? <a href="/Account/Login">Log in</a></small>
            </div>
        </div>

        <div class="right">
            <div class="welcome">
                <h1>Welcome to MovieDiscussion</h1>
                <p>A place to dive into movies, share your thoughts,<br /> and meet fellow film lovers.</p>
                <img src="https://cdn-icons-png.flaticon.com/512/2989/2989835.png" alt="Movie Icon" />
            </div>
        </div>
    </div>
</body>
</html>
