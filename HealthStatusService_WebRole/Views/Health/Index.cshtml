@model List<HealthStatusService_WebRole.Models.HealthRecord>

<h2>Service Health Status <small>(Auto-refreshing every 3 seconds)</small></h2>

<div id="health-data">
    @await Html.PartialAsync("_HealthStatusPartial", Model)
</div>

@section Scripts {
    <script>
        function refreshHealthData() {
            fetch('@Url.Action("HealthStatusPartial", "Health")')
                .then(response => response.text())
                .then(data => {
                    document.getElementById('health-data').innerHTML = data;
                });
        }

        setInterval(refreshHealthData, 10000);
        refreshHealthData();
    </script>
}